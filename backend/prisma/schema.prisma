// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Program {
  id          Int         @default(autoincrement()) @id
  title       String      
  author      String
  description String
  visibility  Boolean     @default(false)
  categories  String?
  genres      String?
  audios      Audio[]
  cover_path  String?
}

model Audio {
  id          Int         @default(autoincrement()) @id
  title       String
  author      String
  description String
  visibility  Boolean     @default(false)
  date        String?
  program     Program?    @relation(fields: [programId], references: [id], onDelete: Cascade)
  programId   Int?
  categories  String?
  genres      String?
  audio_path  String
  cover_path  String?
}

model Category {
  id          Int         @default(autoincrement()) @id
  name        String
  description String
}

model Genre {
  id          Int         @default(autoincrement()) @id
  name        String
  description String
}